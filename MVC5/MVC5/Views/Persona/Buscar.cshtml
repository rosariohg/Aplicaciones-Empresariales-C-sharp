@model MVC5.Models.Persona
@{
    ViewBag.Title = "Buscar";
}

<h2>Persona</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-2">
            <label>@Html.LabelFor(model => model.PersonaID)</label>
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.PersonaID)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label>@Html.LabelFor(model => model.Nombre)</label>
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Nombre)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label>@Html.LabelFor(model => model.Apellido)</label>
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Apellido)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label>@Html.LabelFor(model => model.FechaNac)</label>
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.FechaNac)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label>@Html.LabelFor(model => model.Direccion)</label>
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Direccion)
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label>@Html.LabelFor(model => model.Email)</label>
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(model => model.Email)
        </div>
    </div>

}

@Html.ActionLink("Listar personas", "Listar", "Persona")

